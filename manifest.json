{
  "manifest_version": 3,
  "name": "Runsystem Tenten DNS Automation",
  "version": "2.2.0",
  "description": "Extension for Runsystem's Techsupport - WHOIS Lookup + IP/Domain Info + DNS Records Checker + Auto Ladipage DNS + IP Widget",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://domain.tenten.vn/*",
    "https://whois.tenten.vn/*",
    "https://check-host.net/*",
    "https://dns.google/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tenten DNS Automation",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://domain.tenten.vn/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["ip-widget-content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
